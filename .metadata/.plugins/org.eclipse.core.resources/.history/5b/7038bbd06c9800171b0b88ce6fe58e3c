         * Найти периметр и площадь данного прямоугольника.
         * */
        
        int aX = 1;
        int aY = 7;
        int bX = 2;
        int bY = 9;
        
        int aLengh = bX - aX;
        int bLengh = bY - aY;
        System.out.println("Task6");
        System.out.println("Длинна стороны а = "+ aLengh);
